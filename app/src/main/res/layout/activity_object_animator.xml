<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".one_animator.ObjectAnimatorActivity">

    <TextView
        android:id="@+id/tv_start_object_animator"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#cccccc"
        android:gravity="center"
        android:padding="5dp"
        android:text="start"
        android:layout_marginRight="10dp"
        android:textColor="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_cancel_object_animator" />

    <TextView
        android:id="@+id/tv_cancel_object_animator"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#cccccc"
        android:gravity="center"
        android:padding="5dp"
        android:text="cancel"
        android:textColor="#333333"
        app:layout_constraintLeft_toRightOf="@+id/tv_start_object_animator"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/image_view_object_animator"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@mipmap/timg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_object_animator"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#cccccc"
        android:text="object animator test "
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.zhaogaofei.customerviewstudywithqihang.one_animator.customer.PointView
        android:id="@+id/point_view_object_animator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>