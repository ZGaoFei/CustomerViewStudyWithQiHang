<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".two_drawing.DrawingStartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_paint_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="paint and canvas"/>

        <Button
            android:id="@+id/bt_paint_canvas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="paint and canvas draw path and text"/>

        <Button
            android:id="@+id/bt_paint_canvas3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="draw region"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>