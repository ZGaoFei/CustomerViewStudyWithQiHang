<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".two_drawing.PaintAndCanvasBezierActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_left_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="left reset"/>

        <com.example.zhaogaofei.customerviewstudywithqihang.two_drawing.customer.PaintAndCanvasBezierView
            android:id="@+id/bezier_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_right_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right reset"/>

        <com.example.zhaogaofei.customerviewstudywithqihang.two_drawing.customer.PaintAndCanvasBezierView
            android:id="@+id/bezier_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>